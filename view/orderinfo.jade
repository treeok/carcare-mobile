doctype html
html
   head
      title 订单详情
      meta(http-equiv="Content-Type",content="text/html; charset=utf-8")
      meta(name="viewport",content="width=device-width, initial-scale=1")
      include include/loads.jade
   body
      div(data-role="page" id="orderinfo")
         include include/header.jade
         a.title.title-arrow(data-role="button" data-corners="false" data-rel="back" data-icon="back" data-iconpos="left") 收货地址
         div(data-role="content" style="padding:0;")
            div(style="background:url('./img/ads_bg1.png') repeat-x #fff;height:72px;margin-top:10px;")
               div(style="margin:0 15px;position:relative;top:15px;")
                 p(style="margin:0;")
                   img(src="./img/user-ads.png")
                   span.address-name 张三
                   img(src="./img/tel.png")
                   span.address-tel 15618735062
                 p.address-detail(style="margin:0;") 上海市闸北区万荣路1188弄G栋201室
                 a(style="position:absolute;height: 30px;width: 24px;top:5px;right:0;display:block;background:url('./img/arrow-r.png') no-repeat right;" href="#address")
            div(style="background:#fff;height:50px;margin-top:20px;border:1px solid #dcdcdc;")
                span.ads-left 支付方式
                span.ads-right 在线支付
            div(style="background:#fff;height:120px;margin-top:20px;border:1px solid #dcdcdc;")
                div(style="margin:0 15px;height:100%;")
                    table(style="position:relative;width:100%;height:100%;")
                        tr
                            th(style="text-align:left;width:40%;font-weight:normal;") 商品金额合计
                            td(style="text-align:right;color:#37bdd6;") 297元
                        tr
                            th(style="text-align:left;width:40%;font-weight:normal;") 总计
                            td(style="text-align:right;color:#37bdd6;") 297元
         div(data-role="footer" style="background-color:#303032;height:50px;" data-position="fixed")
             span(style="display:inline-block;height:50px;line-height:50px;text-indent:15px;color:#37bdd6;font-size:24px;font-weight:normal;") ￥297
             button(style="display:block;float:right;height:50px;width:150px;margin:0;background-color:#37bdd6;color:#fff;border:1px solid #37bdd6;font-size:18px;" data-corners="false") 立即结算
      div(data-role="page" id="address")
         include include/header.jade
         a.title.title-arrow(data-role="button" data-corners="false" data-rel="back" data-icon="back" data-iconpos="left") 收货地址
         div(data-role="content" style="padding:0;")
             div(style="background:url('./img/ads_bg1.png') repeat-x #fff;height:72px;margin-top:10px;")
                 div(style="margin:0 15px;position:relative;top:15px;")
                     p(style="margin:0;")
                         img(src="./img/user-ads.png")
                         span.address-name 张三
                         img(src="./img/tel.png")
                         span.address-tel 15618735062
                     p.address-detail(style="margin:0;") 上海市闸北区万荣路1188弄G栋201室
                     a(style="position:absolute;height: 30px;width: 24px;top:5px;right:0;display:block;background:url('./img/arrow-r.png') no-repeat right;" href="#edit-address")
             div(style="background: #fff;height:72px;margin-top:10px;border:1px solid #37bdd6;")
                 div(style="margin:0 15px;position:relative;top:15px;")
                     p(style="margin:0;")
                         img(src="./img/user-ads.png")
                         span.address-name 张三
                         img(src="./img/tel.png")
                         span.address-tel 15618735062
                     p.address-detail(style="margin:0;") 上海市闸北区万荣路1188弄G栋201室
                     a(style="position:absolute;height: 30px;width: 24px;top:5px;right:0;display:block;background:url('./img/arrow-r.png') no-repeat right;" href="#edit-address")
             div(data-role="fieldcontain" style="border-bottom:none;padding: 20px 15px;")
                 a.btn-blank(data-role="button"  data-corners="false" style="background:#fff;border:1px solid #37bdd6;color:#37bdd6;font-size:18px;") +新增收货地址
       div(data-role="page" id="edit-address")
           include include/header.jade
           a.title.title-arrow(data-role="button" data-corners="false" data-rel="back" data-icon="back" data-iconpos="left") 编辑收货地址
           div(data-role="content")
               div(data-role="ui-field-contain" style="border-bottom:none;")
               label(for="name") 收件人
               input#name(name="name" data-corners="false" type="text" placeholder="请输入收件人的姓名")
               label(for="tel") 联系方式
               input#code(name="tel" data-corners="false" type="text" placeholder="请输入收件人手机号")
               label(for="address") 收货地址
               select#province(name="province" data-corners="false")
               select#city(name="city" data-corners="false")
               select#county(name="county" data-corners="false")
               textarea(rows="20" name="detail-address" id="detail-address" placeholder="请输入详细地址")
               div(data-role="ui-field-contain" style="margin-top:30px;")
                   a.btn-primary(data-role="button"  data-corners="false") 保存

